{
  // https://developer.chrome.com/apps/manifest
  "manifest_version": 2,
  "name": "Yahoo Gemini Pixel Inspector",
  "description": "Diagnose all Yahoo Gemini DPA Pixels",
  "version": "1.0",

  // https://developer.chrome.com/extensions/browserAction
  "browser_action": {
    "default_title": "Yahoo Gemini Pixel",
    "default_icon": "img/dpa.png",
    "default_popup": "popup.html"
  },

  // https://developer.chrome.com/extensions/contentSecurityPolicy
  // "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self';",
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "js/content.js" ]
    }
  ],

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "permissions": [
    "activeTab",
    "webRequest",
    "*://sp.analytics.yahoo.com/*",
    "storage"
  ]
}
